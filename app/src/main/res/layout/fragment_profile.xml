<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment"
    android:background="#E6E6FA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtUsernameProfile"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Happy User"
                    android:textColor="@color/black"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtLogOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.2"
                    android:textAlignment="textEnd"
                    android:paddingEnd="20dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Log out"
                    android:textColor="#303C65"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Your account"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imgBtnPersonalinfo"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:background="#E6E6FA"
                        android:padding="9dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_personalinfo" />

                    <TextView
                        android:id="@+id/txtPersonalinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:padding="10dp"
                        android:text="Personal information"
                        android:textColor="#5C5C5C"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/imgBtnPersonalinfoArrow"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E6E6FA"
                        android:padding="17dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:background="#E6E6FA"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_card" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:padding="10dp"
                        android:text="Cards and accounts"
                        android:textColor="#5C5C5C"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E6E6FA"
                        android:padding="17dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:background="#E6E6FA"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_places" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:padding="10dp"
                        android:text="Places and addresses"
                        android:textColor="#5C5C5C"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E6E6FA"
                        android:padding="17dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:background="#E6E6FA"
                        android:padding="9dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_pnotifications" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:padding="10dp"
                        android:text="Notifications"
                        android:textColor="#5C5C5C"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E6E6FA"
                        android:padding="17dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Support"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:background="#E6E6FA"
                        android:padding="9dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_help" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:padding="10dp"
                        android:text="Help"
                        android:textColor="#5C5C5C"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E6E6FA"
                        android:padding="17dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:background="#E6E6FA"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_rating" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:padding="10dp"
                        android:text="Rate the app"
                        android:textColor="#5C5C5C"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E6E6FA"
                        android:padding="17dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/banner_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:background="#E6E6FA"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:padding="10dp"
                        android:text="Settings"
                        android:textColor="#5C5C5C"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#E6E6FA"
                        android:padding="17dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Terms and conditions"
                    android:textAlignment="center"
                    android:textColor="#303C65"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/poppins"
                    android:text="App version 1.1.0"
                    android:textAlignment="center"
                    android:textColor="#5C5C5C"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>